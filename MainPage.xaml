<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KalkulatorNapiwkow.MainPage"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout HorizontalOptions="FillAndExpand"
            Spacing="15"
            Margin="20">
            <Label HorizontalOptions="CenterAndExpand"
                Text="Kalkulator Napiwkow"
                FontSize="28"
                FontAttributes="Bold"
                BackgroundColor="#2196F3"
                Padding="20"
                SemanticProperties.HeadingLevel="Level1" />
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                <Label 
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Start"
                    TextColor="Black"
                    Text="Kwota rachunku"
                    
                    />
                <Entry
                    TextColor="Black"
                    HorizontalOptions="End"
                    Placeholder="Wpisz kwotę"
                    x:Name="inpValue"
                    Keyboard="Numeric"
                    TextChanged="CalculateTip"
                    />
                <VerticalStackLayout>
                    <RadioButton
                        x:Name="rbPLN"
                        Content="PLN"
                        IsChecked="True"
                        CheckedChanged="rbHandler"
                        TextColor="Black"
                        />
                    <RadioButton
                        x:Name="rbEUR"
                        Content="EUR"
                        IsChecked="False"
                        CheckedChanged="rbHandler"
                        TextColor="Black"
                        />
                    <RadioButton
                        x:Name="rbUSD"
                        Content="USD"
                        IsChecked="False"
                        CheckedChanged="rbHandler"
                        TextColor="Black"
                        />
                </VerticalStackLayout>
            </HorizontalStackLayout>
                <Label 
                    HorizontalOptions="CenterAndExpand"
                    Text="Procent napiwku" 
                    TextColor="Black"
                       />
            <VerticalStackLayout HorizontalOptions="CenterAndExpand">
                    <Slider
                        x:Name="sliderTip"
                        HorizontalOptions="FillAndExpand"
                        ValueChanged="onValueChangeSlider"
                        Loaded="onValueChangeSlider"
                        Minimum="0"
                        Maximum="30"
                        MinimumWidthRequest="200"
                        Value="15"
                        />
                    <Label
                        Text="test"
                        TextColor="Black"
                        x:Name="LblSliderValueDisplay"
                        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center"/>
                </VerticalStackLayout>
            <Button 
                Text="Oblicz Napiwek"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="10"
                MinimumHeightRequest="50"
                Clicked="CalculateTip"
                HorizontalOptions="CenterAndExpand"
                />
            <Label 
                HorizontalOptions="CenterAndExpand"
                Text="Wysokość napiwku:"
                FontSize="20"
                FontAttributes="Bold"
                TextColor="Black"
                x:Name="LblTipAmount"
                />
            <Label 
                HorizontalOptions="CenterAndExpand"
                Text="Łączna kwota do zapłaty:"
                FontSize="20"
                FontAttributes="Bold"
                TextColor="Black"
                x:Name="LblTotalAmount"
                />
            <Button 
                Text="Wyczyść"
                BackgroundColor="#FF9800"
                TextColor="White"
                CornerRadius="10"
                MinimumHeightRequest="50"
                Clicked="ClearFields"
                HorizontalOptions="CenterAndExpand"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
